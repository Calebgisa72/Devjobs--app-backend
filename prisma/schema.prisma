generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  type        String
  email       String   @unique
  password    String
  createdDate DateTime @default(now())
}

model Job {
  id          Int          @id @default(autoincrement())
  logo        String
  posted      DateTime     @default(now())
  jobType     String
  title       String
  company     String
  country     String
  description String?
  webLink     String
  requirements Requirement[] @relation("jobRequirements")
  whatToDo    WhatToDo[]     @relation("whatTodo") 
}

model Requirement {
  id          Int      @id @default(autoincrement())
  description String
  jobId       Int
  job         Job      @relation("jobRequirements", fields: [jobId], references: [id])
  items       String[]
}

model WhatToDo {
  id          Int      @id @default(autoincrement())
  description String
  jobId       Int
  job         Job      @relation("whatTodo", fields: [jobId], references: [id])
  items       String[]
}
